<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DetailActivity">
    <Button
        android:id="@+id/btBack"
        android:background="@drawable/ic_bt_back"
        android:backgroundTint="@color/white"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_width="45dp"
        android:layout_height="45dp"/>
    <Button
        android:id="@+id/btFavorite"
        android:background="@drawable/ic_favorite"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:layout_width="30dp"
        android:layout_height="30dp"/>
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        app:elevation="0dp"
        android:background="@color/lightTeal"
        android:layout_width="match_parent"
        android:layout_height="425dp">
        <com.google.android.material.appbar.CollapsingToolbarLayout
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:background="@drawable/dot_bg"
                android:backgroundTint="@color/white"
                android:layout_marginTop="100dp"
                android:layout_marginLeft="-50dp"
                android:rotation="45"
                android:alpha="0.5"
                android:layout_width="171dp"
                android:layout_height="93dp"
                android:layout_gravity="left|top"/>
            <ImageView
                android:layout_marginTop="-80dp"
                android:layout_marginRight="-80dp"
                android:background="@drawable/pokeball_bg_2"
                android:backgroundTint="@color/white"
                android:alpha="0.25"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_gravity="right|bottom"/>
            <ImageView
                android:id="@+id/imgPokemon"
                android:layout_gravity="center"
                android:layout_marginTop="45dp"
                android:layout_width="240dp"
                android:layout_height="240dp"/>
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolBar"
                app:layout_collapseMode="pin"
                android:gravity="top"
                android:elevation="0dp"
                android:layout_width="match_parent"
                android:layout_height="210dp">
                <RelativeLayout
                    android:padding="8dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="90dp">
                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="5dp"
                        android:text="Bulbasaur"
                        android:textColor="@color/white"
                        android:textSize="35dp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/tvID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="10dp"
                        android:text="#001"
                        android:textColor="@color/white"
                        android:textSize="30dp"/>
                    <TextView
                        android:id="@+id/tvType1"
                        android:layout_width="65dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/type_pokemon_bg"
                        android:gravity="center"
                        android:text="Grass"
                        android:textColor="@color/white"
                        android:textSize="15dp"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/tvType2"
                        android:text="Poison"
                        android:textColor="@color/white"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:background="@drawable/type_pokemon_bg"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_width="65dp"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/tvType1"
                        android:layout_toEndOf="@+id/tvType1"/>
                </RelativeLayout>
            </androidx.appcompat.widget.Toolbar>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@drawable/top_round_bar_bg"
                android:orientation="vertical">
                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tabLayout"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:tabGravity="fill"
                    app:tabMode="fixed"
                    app:tabSelectedTextColor="@color/black"
                    app:tabTextAppearance="@style/TextAppearance.Material3.BodyMedium">
                </com.google.android.material.tabs.TabLayout>
            </LinearLayout>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.core.widget.NestedScrollView
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>